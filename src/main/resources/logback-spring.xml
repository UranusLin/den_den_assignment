<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 定義 Log 儲存路徑 -->
    <property name="LOG_PATH" value="./logs"/>

    <!-- 1. 主要 Log Appender (包含 INFO, WARN, ERROR, DEBUG) -->
    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 每天滾動一次檔案 -->
            <fileNamePattern>${LOG_PATH}/archived/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 保留 30 天的歷史紀錄 -->
            <maxHistory>30</maxHistory>
            <!-- 總大小限制 (可選) -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. 錯誤 Log Appender (只包含 ERROR) -->
    <appender name="ERROR-FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory> <!-- Error log 保留久一點 -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 設定 Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE-ROLLING"/>
        <appender-ref ref="ERROR-FILE-ROLLING"/>
    </root>

    <!-- 針對專案的特定設定 -->
    <logger name="com.denden.assignment" level="DEBUG"/>

</configuration>
